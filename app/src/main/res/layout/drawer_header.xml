<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/dark_gray">

    <TextView
        android:id="@+id/tv_nickname"
        style="@style/button_20_bold_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/tv_nickname" />

    <TextView
        style="@style/text_15_bold_lightgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_nickname"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tv_nickname"
        android:text="@string/tv_sir" />

</RelativeLayout>